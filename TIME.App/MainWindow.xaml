<Window x:Class="TIME.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TIME.App"
        xmlns:svg="clr-namespace:Svg.Skia;assembly=Svg.Skia"
        mc:Ignorable="d" 
        WindowStyle="None" Background="#111111"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen"
        Title="{Binding AppName}" Height="550" Width="650">
    <WindowChrome.WindowChrome>
        <WindowChrome            
            GlassFrameThickness="0"
            CornerRadius="0"                     
            CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image x:Name="Logo" Source="/Resources/TIME_Logo.svg"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button 
                Name="MinimizeView" 
                Content="_" 
                Width="40" Height="40" 
                BorderBrush="Transparent" 
                Background="Transparent"
                Command="{Binding MinimizeViewCommand}"
                Foreground="#cccccc"/>
            <Button 
                Name="MaximizeView" 
                Content="[]"                     
                Width="40" 
                Height="40" 
                BorderBrush="Transparent" 
                Background="Transparent"
                Command="{Binding MaximizeViewCommand}"
                Foreground="#cccccc"/>
            <Button 
                Name="CloseView"                    
                Content="X"                     
                Width="40" 
                Height="40" 
                BorderBrush="Transparent" 
                Background="Transparent"                  
                Command="{Binding CloseViewCommand}"
                Foreground="#cccccc"/>
        </StackPanel>
        
        
        
        
        
        
        
        
        
        
        
        
